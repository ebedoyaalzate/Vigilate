
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/idioma"
        android:layout_height="wrap_content"
        android:text="Idioma"
        android:textSize="25dp"
        android:paddingTop="60dp"
        android:textStyle="normal"
        android:textColor="#000000"/>

    <Spinner
        android:id="@+id/idiomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tipoAlarma"
        android:layout_alignParentRight="true"></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tipoAlarma"
        android:layout_height="wrap_content"
        android:text="Tipo de alarma"
        android:textSize="40dp"
        android:paddingVertical="40dp"
        android:textStyle="normal"
        android:layout_below="@id/idioma"
        android:gravity="center_horizontal"
        android:textColor="#000000"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vibrar"
        android:text="Vibrar"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/tipoAlarma"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/sonido"
        android:layout_height="wrap_content"
        android:text="Tipo de sonido"
        android:textSize="25dp"
        android:paddingVertical="10dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_below="@+id/vibrar"/>

    <Spinner
        android:id="@+id/tiposSonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sonido"
        android:layout_alignEnd="@+id/idiomas"
        android:layout_marginBottom="13dp"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volumen"
        android:text="Volumen ascendente"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/sonido"/>
</RelativeLayout>
</ScrollView>